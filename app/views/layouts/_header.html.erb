<header class="navbar navbar-fixed-top navbar-inverse" style = "background-color:#8b0000;">
  <div class="container">
    <%= link_to "UPFreelancer", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <li style ="font-size: 17px; margin-top: 15px;margin-right:16px; color: white;"><%= current_user.name %></li>
          <li><%= link_to "Service", service_path ,id:"tab"%></li>
          <li><%= link_to "Wanted", wanted_path ,id:"tab"%></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Home", root_path %></li>
          <li><%= link_to "About", about_path %></li>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
